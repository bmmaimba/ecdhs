<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Automated action for project deadline reminder -->
        <record id="automated_action_project_deadline" model="base.automation">
            <field name="name">Project Deadline Reminder</field>
            <field name="model_id" ref="model_housing_project"/>
            <field name="trigger">on_time</field>
            <field name="trigger_field_id" ref="field_housing_project_end_date"/>
            <field name="filter_domain">[('state', 'not in', ['completed', 'cancelled'])]</field>
            <field name="state">code</field>
            <field name="code">
record.message_post(
    body="Reminder: Project deadline approaching",
    message_type="notification"
)
            </field>
        </record>
    </data>
</odoo>