<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_budget_allocation_wizard_form" model="ir.ui.view">
        <field name="name">housing.project.budget.allocation.wizard.form</field>
        <field name="model">housing.project.budget.allocation.wizard</field>
        <field name="arch" type="xml">
            <form string="Budget Allocation">
                <sheet>
                    <group>
                        <field name="project_id" readonly="context.get('active_model') == 'housing.project'"/>
                        <field name="current_budget" widget="monetary"/>
                        <field name="additional_amount" widget="monetary"/>
                        <field name="allocation_date"/>
                        <field name="allocated_by"/>
                    </group>
                    <group>
                        <field name="supporting_document" filename="document_filename"/>
                        <field name="document_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="allocation_notes" placeholder="Enter allocation notes here..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_allocate_budget" string="Allocate Budget" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_budget_allocation_wizard" model="ir.actions.act_window">
        <field name="name">Allocate Budget</field>
        <field name="res_model">housing.project.budget.allocation.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_housing_project"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>