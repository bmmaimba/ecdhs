<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_beneficiary_qualification_wizard_form" model="ir.ui.view">
        <field name="name">housing.beneficiary.qualification.wizard.form</field>
        <field name="model">housing.beneficiary.qualification.wizard</field>
        <field name="arch" type="xml">
            <form string="Beneficiary Qualification">
                <sheet>
                    <group>
                        <field name="beneficiary_id" readonly="context.get('active_model') == 'housing.beneficiary'"/>
                        <field name="qualification_status"/>
                        <field name="qualification_date"/>
                        <field name="qualified_by"/>
                    </group>
                    <group>
                        <field name="supporting_document" filename="document_filename"/>
                        <field name="document_filename" invisible="1"/>
                    </group>
                    <group>
                        <field name="qualification_notes" placeholder="Enter qualification notes here..."/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_update_qualification" string="Update Qualification" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_beneficiary_qualification_wizard" model="ir.actions.act_window">
        <field name="name">Update Qualification</field>
        <field name="res_model">housing.beneficiary.qualification.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_housing_beneficiary"/>
        <field name="binding_view_types">form</field>
    </record>
</odoo>