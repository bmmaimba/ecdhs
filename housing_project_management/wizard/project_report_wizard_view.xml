<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_report_wizard_form" model="ir.ui.view">
        <field name="name">housing.project.report.wizard.form</field>
        <field name="model">housing.project.report.wizard</field>
        <field name="arch" type="xml">
            <form string="Generate Project Report">
                <sheet>
                    <group>
                        <field name="project_id"/>
                        <field name="project_type" attrs="{'invisible': [('project_id', '!=', False)]}"/>
                    </group>
                    <group>
                        <field name="date_from"/>
                        <field name="date_to"/>
                    </group>
                    <group>
                        <field name="report_type"/>
                        <field name="include_beneficiaries"/>
                        <field name="include_services"/>
                        <field name="include_budget"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_report" string="Generate Report" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_report_wizard" model="ir.actions.act_window">
        <field name="name">Generate Report</field>
        <field name="res_model">housing.project.report.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    <menuitem id="menu_project_report_wizard"
              name="Generate Reports"
              parent="menu_housing_reporting"
              action="action_project_report_wizard"
              sequence="10"/>
</odoo>