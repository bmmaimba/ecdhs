<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_project_settings_wizard_form" model="ir.ui.view">
        <field name="name">project.settings.wizard.form</field>
        <field name="model">project.settings.wizard</field>
        <field name="arch" type="xml">
            <form string="Project Settings">
                <sheet>
                    <group>
                        <field name="default_project_type"/>
                        <field name="auto_create_documents"/>
                        <field name="require_approval_for_budget_changes"/>
                        <field name="enable_email_notifications"/>
                    </group>
                    <group string="Approval Settings">
                        <field name="approval_required_for_planning"/>
                        <field name="approval_required_for_implementation"/>
                        <field name="approval_required_for_completion"/>
                    </group>
                    <group string="Beneficiary Settings">
                        <field name="auto_qualify_beneficiaries"/>
                        <field name="income_threshold"/>
                        <field name="prioritize_vulnerable"/>
                    </group>
                </sheet>
                <footer>
                    <button name="action_save_settings" string="Save Settings" type="object" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_project_settings_wizard" model="ir.actions.act_window">
        <field name="name">Project Settings</field>
        <field name="res_model">project.settings.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
