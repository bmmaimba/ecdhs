<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Municipalities -->
        <record id="municipality_1" model="res.partner">
            <field name="name">Cape Town Municipality</field>
            <field name="is_municipality">True</field>
        </record>

        <record id="municipality_2" model="res.partner">
            <field name="name">Johannesburg Municipality</field>
            <field name="is_municipality">True</field>
        </record>

        <!-- Demo Projects -->
        <record id="demo_project_1" model="housing.project">
            <field name="name">Green Valley IRDP</field>
            <field name="reference">HP/2025/00001</field>
            <field name="project_type">irdp</field>
            <field name="municipality_id" ref="municipality_1"/>
            <field name="start_date" eval="(DateTime.now() + relativedelta(days=-30)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.now() + relativedelta(months=6)).strftime('%Y-%m-%d')"/>
            <field name="budget_allocation">5000000</field>
            <field name="state">implementation</field>
        </record>

        <record id="demo_project_2" model="housing.project">
            <field name="name">Sunrise UISP</field>
            <field name="reference">HP/2025/00002</field>
            <field name="project_type">uisp</field>
            <field name="municipality_id" ref="municipality_2"/>
            <field name="start_date" eval="(DateTime.now() + relativedelta(days=-60)).strftime('%Y-%m-%d')"/>
            <field name="end_date" eval="(DateTime.now() + relativedelta(months=12)).strftime('%Y-%m-%d')"/>
            <field name="budget_allocation">7500000</field>
            <field name="state">planning</field>
        </record>

        <!-- Demo Beneficiaries -->
        <record id="demo_beneficiary_1" model="housing.beneficiary">
            <field name="name">John Doe</field>
            <field name="id_number">8001015009087</field>
            <field name="project_id" ref="demo_project_1"/>
            <field name="qualification_status">qualified</field>
            <field name="monthly_income">3500</field>
        </record>

        <!-- Demo Services -->
        <record id="demo_service_1" model="housing.services">
            <field name="name">Water Connection</field>
            <field name="type">water</field>
            <field name="project_id" ref="demo_project_1"/>
            <field name="status">in_progress</field>
        </record>
    </data>
</odoo>