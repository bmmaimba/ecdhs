<odoo>
  <record id="view_performance_indicator_list" model="ir.ui.view">
    <field name="name">performance.indicator.list</field>
    <field name="model">performance.indicator</field>
    <field name="arch" type="xml">
      <list>
        <field name="name"/>
        <field name="programme_id"/>
        <field name="uom_id"/>
        <field name="baseline"/>
        <field name="latest_achievement"/>
        <field name="performance_trend" widget="badge"
               decoration-success="performance_trend == 'improving'"
               decoration-warning="performance_trend == 'stable'"
               decoration-danger="performance_trend == 'declining'"/>
      </list>
    </field>
  </record>

  <record id="view_performance_indicator_form" model="ir.ui.view">
    <field name="name">performance.indicator.form</field>
    <field name="model">performance.indicator</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <group>
              <field name="name"/>
              <field name="programme_id"/>
              <field name="uom_id" options="{'no_create': True}"/>
              <field name="uom_category_id" invisible="1"/>
            </group>
            <group>
              <field name="baseline"/>
              <field name="latest_achievement" readonly="1"/>
              <field name="performance_trend" readonly="1" widget="badge"/>
            </group>
          </group>
          <group string="Output Indicator">
            <field name="output_indicator" nolabel="1" placeholder="Describe the specific output indicator for this performance measure..."/>
          </group>
          <notebook>
            <page string="Targets">
              <field name="targets">
                <list>
                  <field name="quarter"/>
                  <field name="target_value"/>
                  <field name="target_date"/>
                  <field name="status" widget="badge"/>
                  <field name="uom_id" invisible="1"/>
                </list>
              </field>
            </page>
            <page string="Achievements">
              <field name="achievements">
                <list>
                  <field name="quarter"/>
                  <field name="actual_value"/>
                  <field name="achievement_date"/>
                  <field name="percentage_achieved"/>
                  <field name="performance_status" widget="badge"/>
                </list>
              </field>
            </page>
          </notebook>
        </sheet>
        <!-- Chatter -->
        <chatter/>
      </form>
    </field>
  </record>

